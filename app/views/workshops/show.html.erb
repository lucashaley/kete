<h2><%= @workshop.title %> (<%= link_to @workshop.offering.title, @workshop.offering %>)</h2>

<p id="notice"><%= notice %></p>

<p>
  <strong>Lab:</strong>
  <%= link_to @workshop.lab.name, @workshop.lab %>
</p>

<ul class="small-block-grid-1 medium-block-grid-3 large-block-grid-5">
  <%= render @workshop.sessions %>
</ul>

<h4>Add Session</h4>
<%= form_for([@workshop, @workshop.sessions.build]) do |f| %>
<div class="field">
  <%= f.label :day_of_week %><br>
  <%= f.select :day_of_week, Session.day_of_weeks.keys %>
</div>

<div class="field">
  <%= f.label :time_start %>
  <%= f.time_select :time_start, {minute_step: 10, ampm: true} %>
</div>

<div class="field">
  <%= f.label :time_end %>
  <%= f.time_select :time_end, {minute_step: 10, ampm: true} %>
</div>

<div class="field">
  <%= f.label :lab_id %><br>
  <%= f.select :lab_id, Lab.all.collect { |l| [ l.name, l.id ] } %>
</div>
<p>
  <%= f.submit %>
</p>
<% end %>


<%= link_to 'Edit', edit_workshop_path(@workshop) %> |
<%= link_to 'Back', workshops_path %>
