<li>
<div class="card">
  <div class="card-divider">
    <%= instructor.title %>
  </div>
  <div class="card-image">
    <%= image_tag(instructor.image_url(:thumb).to_s, :class=>"annotatable") %>
  </div>
  <div class="card-title">
    <%= link_to instructor.full_name, instructor_path(instructor) %>
  </div>
  <div class="card-section">
    <p><%= mail_to instructor.email %></p>
  </div>
  <div class="card-section">
    <p><%= truncate(instructor.biography, :length => 120, :separator => ' ') %></p>
  </div>
  <div class="card-divider">
    <%= link_to 'Edit', edit_instructor_path(instructor) %> | <%= link_to 'Destroy', instructor_path(instructor),
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
  </div>
</div>
</li>
