<p id="notice"><%= notice %></p>

<h1>Listing Guest Visits</h1>

<table>
  <thead>
    <tr>
      <th>Guest lecturer</th>
      <th>Course</th>
      <th>Start</th>
      <th>End</th>
      <th>Type</th>
      <th>Budget</th>
      <th>Parking needed</th>
      <th>Pl approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guest_visits.each do |guest_visit| %>
      <tr>
        <td><%= guest_visit.guest_lecturer.full_name %></td>
        <td><%= guest_visit.course.code_short %></td>
        <td><%= guest_visit.start %></td>
        <td><%= guest_visit.end %></td>
        <td><%= guest_visit.type %></td>
        <td><%= guest_visit.budget %></td>
        <td><%= guest_visit.parking_needed %></td>
        <td><%= guest_visit.pl_approved %></td>
        <td><%= link_to 'Show', guest_visit %></td>
        <td><%= link_to 'Edit', edit_guest_visit_path(guest_visit) %></td>
        <td><%= link_to 'Destroy', guest_visit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

