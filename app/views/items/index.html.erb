<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Lesson</th>
      <th>Order</th>
      <th>Title</th>
      <th>Detail</th>
      <th>Resources</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.lesson %></td>
        <td><%= item.order %></td>
        <td><%= item.title %></td>
        <td><%= item.detail %></td>
        <td><%= item.resources %></td>
        <td><%= item.duration %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

